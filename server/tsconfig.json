{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*"
      ],
    },
    "lib": [
      "es6",
      "esnext"
    ]
  },
  "include": [
    "src/**/*",
    "test/*"
  ]
}
